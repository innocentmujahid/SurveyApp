<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.teespire.survay.fragments.InfiniteViewPager
        android:id="@+id/view_pager"
        android:layout_above="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/downtab"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:visibility="visible"
        android:weightSum="8">

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.3"></View>

        <Button
            android:id="@+id/BTN_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/left_arow" />

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.3"></View>

        <Button
            android:id="@+id/BTN_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/right_arow" />
    </LinearLayout>

    <ImageView
        android:id="@+id/downtab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:scaleType="fitXY"
        android:src="@mipmap/logo"
        android:visibility="visible" />
</RelativeLayout>
