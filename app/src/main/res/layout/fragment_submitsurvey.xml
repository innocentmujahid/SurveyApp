<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/FL_submitSurvey"
    android:background="@mipmap/bg_optionlist"
    tools:context="com.teespire.survay.fragments.SubmitSurveyFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/LB_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Survey"
            android:textColor="@color/white"
            android:layout_above="@+id/BTN_submitsurvey"
            android:gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/BTN_submitsurvey"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/submitbutton"
            android:padding="10dp"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Submit" />

    </RelativeLayout>



</FrameLayout>
